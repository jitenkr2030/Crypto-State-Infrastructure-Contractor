{
  "name": "csic-platform",
  "version": "1.0.0",
  "description": "Crypto State Infrastructure Contractor - Government-Grade Regulatory Platform",
  "private": true,
  "workspaces": [
    "frontend",
    "shared/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd services && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd services && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd services && npm run test",
    "test:frontend": "cd frontend && npm run test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd services && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "deploy:on-prem": "cd deployments/on-prem && ./deploy.sh",
    "audit": "cd scripts && ./audit.sh",
    "migrate": "cd services && npm run migrate"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "go": ">=1.21.0"
  },
  "author": "CSIC Development Team",
  "license": "PROPRIETARY",
  "repository": {
    "type": "git",
    "url": "https://git.csic.gov/internal/csic-platform"
  }
}
